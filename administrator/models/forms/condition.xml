			name="condition_match"
			type="list"
			label="COM_TJFIELDS_FORM_LBL_CONDITION_CONDITION_MATCH"
			description="COM_TJFIELDS_FORM_DESC_CONDITION_CONDITION_MATCH"
			default="1"
			required="true">
