<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="id" type="hidden" size="40" class="inputbox"
			label="COM_TJFIELDS_FORM_LBL_CONDITION_ID"
			description="COM_TJFIELDS_FORM_DESC_CONDITION_ID"
