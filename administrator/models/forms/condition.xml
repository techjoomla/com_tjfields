			<option value="0">Any</option>
		</field>
		<field
			name= "condition"
			description= ""
			type= "subform"
			label="COM_TJFIELDS_FORM_LBL_CONDITION"
			min= "1"
			required= "true"
			formsource= "administrator/components/com_tjfields/models/forms/sub_condition.xml"
